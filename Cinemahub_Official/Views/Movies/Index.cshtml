
@model Cinemahub_Official.Models.MoviesNameViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
</p>
<form asp-controller="Movies" asp-action="Index" method="get">
    <p>
        <!--- <select asp-for="MovieDirector" asp-items="Model.Director">
         <option value="">All</option>
     </select>
     Title: <input type="text" name="SearchString" />
     <input type="submit" value="Filter" /> -->
        <table width="700">
            <tr>
                <td width="100">
                    <select asp-for="MovieDirector" asp-items="Model.Director" style="height:35px">
                        <option value="">All</option>
                    </select>
                </td>
                <td width="50">
                    Title:
                </td>
                <td width="450">
                    <input type="text" name="SearchString" class="form-control me-sm-2" />
                </td>
                <td width="100">
                    <input type="submit" value="Filter" class="btn btn-outline-primary" />
                </td>
            </tr>
        </table>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Director)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
